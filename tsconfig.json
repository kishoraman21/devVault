  {
    "compilerOptions": {
      "target": "ES2017",
      "lib": [
        "dom",
        "dom.iterable",
        "esnext"
      ],
      "allowJs": true,
      "skipLibCheck": true,
      "strict": true,
      "noEmit": true,
      "esModuleInterop": true,
      "module": "esnext",
      "moduleResolution": "bundler",
      "resolveJsonModule": true,
      "isolatedModules": true,
      "jsx": "react-jsx",
      "incremental": true,
      "baseUrl": ".",
      "paths": {
        "@/*": [
          "./src/*"
        ],
        "@/app/*": [
          "./src/app/*"
        ],
        "@/components/*": [
          "./src/app/components/*"
        ],
        "@/ui/*": [
          "./src/app/components/ui/*"
        ],
        "@/lib/*": [
          "./src/lib/*"
        ],
        "@/models/*": [
          "./src/models/*"
        ],
        "@/db/*": [
          "./src/dbConfig/*"
        ]
      },
      "plugins": [
        {
          "name": "next"
        }
      ]
    },
    "include": [
      "next-env.d.ts",
      "src/**/*.ts",
      "src/**/*.tsx",
      "src/**/*.js",
      ".next/types/**/*.ts",
      ".next/dev/types/**/*.ts"
    ],
    "exclude": [
      "node_modules"
    ]
  }
